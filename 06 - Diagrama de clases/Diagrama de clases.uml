@startuml

' ====== CLASES PRINCIPALES ======

class Bateria {
  + id_bateria: int
  + marca: String
  + modelo: String
  + cantidad: int
  + precio_compra: float
  + precio_venta: float
  + actualizarStock(cambio: int)
}

class Cliente {
  + id_cliente: int
  + nombre: String
  + vehiculo: String
  + telefono: String
  + direccion: String
}

class Proveedor {
  + id_proveedor: int
  + nombre: String
  + telefono: String
  + cuit: String
}

class Venta {
  + id_venta: int
  + fecha: Date
  + total: float
  + registrarVenta()
}

class Compra {
  + id_compra: int
  + fecha: Date
  + total: float
  + registrarCompra()
}

class ItemTransaccion {
  + id_item: int
  + cantidad: int
  + precio_unitario: float
  + calcularSubtotal()
}

' ====== RELACIONES ======

Cliente "1" -- "0..*" Venta : realiza
Proveedor "1" -- "0..*" Compra : provee

Venta "1" -- "0..*" ItemTransaccion : contiene
Compra "1" -- "0..*" ItemTransaccion : contiene

Bateria "1" -- "0..*" ItemTransaccion : seTransacciona

@enduml
