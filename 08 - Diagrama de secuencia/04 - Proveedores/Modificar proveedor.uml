@startuml
== Modificar Proveedor ==

Usuario -> PantallaProveedores : ingresarNombreProveedor(nombre)
activate PantallaProveedores

PantallaProveedores -> ControladorProveedores : buscarProveedor(nombre)
activate ControladorProveedores

ControladorProveedores -> Proveedor : filtrarPorNombre(nombre)
activate Proveedor
Proveedor --> ControladorProveedores : <<listaFiltrada>>
deactivate Proveedor

ControladorProveedores --> PantallaProveedores : <<mostrarProveedores>>
deactivate ControladorProveedores

Usuario -> PantallaProveedores : seleccionarProveedor()

PantallaProveedores -> ControladorProveedores : abrirPantallaModificacion()
activate ControladorProveedores
ControladorProveedores --> PantallaProveedores : <<pantallaModificacion>>
deactivate ControladorProveedores

Usuario -> PantallaProveedores : modificarCampos(nombre, cuit, telefono)

PantallaProveedores -> ControladorProveedores : validarDatos()
activate ControladorProveedores

alt Datos válidos
    ControladorProveedores -> BaseDeDatos : actualizarProveedor(datos)
    activate BaseDeDatos
    BaseDeDatos --> ControladorProveedores : <<confirmación>>
    deactivate BaseDeDatos

    ControladorProveedores --> PantallaProveedores : <<Proveedor modificado>>
    PantallaProveedores --> Usuario : <<Mensaje: "Proveedor modificado">>
    deactivate ControladorProveedores

else Datos inválidos
    ControladorProveedores --> PantallaProveedores : <<string: "datos invalidos">>
    PantallaProveedores --> Usuario : <<mensaje: - "Datos invalidos">>
    deactivate ControladorProveedores
end

== Alternativa: Descartar / Salir ==
Usuario -> PantallaProveedores : seleccionarBoton("SALIR")
PantallaProveedores --> Usuario : <<>>
deactivate PantallaProveedores

@enduml
