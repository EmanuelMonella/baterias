@startuml

actor Usuario

== Eliminar Proveedor ==

Usuario -> PantallaProveedores : ingresarNombreProveedor(nombre)
activate PantallaProveedores

PantallaProveedores -> ControladorProveedores : buscarProveedor(nombre)
activate ControladorProveedores

ControladorProveedores -> Proveedor : filtrarPorNombre(nombre)
activate Proveedor
Proveedor --> ControladorProveedores : <<listaFiltrada>>
deactivate Proveedor

ControladorProveedores --> PantallaProveedores : <<mostrarProveedores>>
deactivate ControladorProveedores

Usuario -> PantallaProveedores : eliminarProveedor()
PantallaProveedores -> Usuario : <<confirmarEliminacion>>

alt Confirmación positiva
    Usuario -> PantallaProveedores : confirmar("Sí")
    PantallaProveedores -> ControladorProveedores : eliminarProveedor()
    activate ControladorProveedores

    
    ControladorProveedores -> BaseDeDatos : eliminarRegistroProveedor(id)
    activate BaseDeDatos
    BaseDeDatos --> ControladorProveedores : <<confirmación>>
    deactivate BaseDeDatos
    
    ControladorProveedores --> PantallaProveedores : <<proveedor eliminado>>
    PantallaProveedores --> Usuario : <<Mensaje - "Proveedore eliminado">>
    deactivate ControladorProveedores

else Cancelación
    Usuario -> PantallaProveedores : confirmar("No")
    PantallaProveedores -> ControladorProveedores : cancelarEliminacion()
    activate ControladorProveedores

    ControladorProveedores --> PantallaProveedores : <<mostrarPantallaAnterior>>
    deactivate ControladorProveedores
    PantallaProveedores --> Usuario : <<Mensaje - "Operacion cancelada">>
end

== Alternativa: Salir ==
Usuario -> PantallaProveedores : seleccionarBoton("Salir")
PantallaProveedores --> Usuario : <<>>
deactivate PantallaProveedores

@enduml

