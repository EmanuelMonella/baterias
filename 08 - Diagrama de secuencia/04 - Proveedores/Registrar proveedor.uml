@startuml
== Registrar Proveedor ==

Usuario -> PantallaProveedores : seleccionarOpcion("Proveedores")
activate PantallaProveedores
PantallaProveedores -> ControladorProveedores : abrirPantallaProveedores()
activate ControladorProveedores
ControladorProveedores --> PantallaProveedores : <<pantallaProveedoresAbierta>>
deactivate ControladorProveedores
PantallaProveedores --> Usuario : <<>>
Usuario -> PantallaProveedores : completarDatos(nombre, cuit, telefono)

PantallaProveedores -> ControladorProveedores : validarDatos()
activate ControladorProveedores

alt Datos v치lidos
    ControladorProveedores -> Proveedor : crearProveedor(nombre, cuit, telefono)
    activate Proveedor
    Proveedor --> ControladorProveedores : <<nuevoProveedor>>
    deactivate Proveedor

    ControladorProveedores -> BaseDeDatos : registrarProveedor()
    activate BaseDeDatos
    BaseDeDatos --> ControladorProveedores : <<confirmaci칩n>>
    deactivate BaseDeDatos

    ControladorProveedores --> PantallaProveedores : <<proveedor registrado>>
    PantallaProveedores --> Usuario : <<mensaje: "Proveedor registrado">>
    deactivate ControladorProveedores

else Datos inv치lidos
    ControladorProveedores --> PantallaProveedores : <<datos invalidos>>
    PantallaProveedores --> Usuario : <<mensaje: "Datos inv치lidos">>
    deactivate ControladorProveedores
end

== Alternativa: Descartar ==
Usuario -> PantallaProveedores : seleccionarBoton("Descartar")
PantallaProveedores --> Usuario : <<>>
deactivate PantallaProveedores

@enduml
